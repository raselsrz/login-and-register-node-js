<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>iofrm</title>
    <link rel="stylesheet" type="text/css" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/public/css/fontawesome-all.min.css">
    <link rel="stylesheet" type="text/css" href="/public/css/iofrm-style.css">
    <link rel="stylesheet" type="text/css" href="/public/css/iofrm-theme39.css">
</head>
<body>
    <div class="form-body without-side">
        <div class="iofrm-layout">
            <div class="form-holder">
                <div class="form-content">
                    <div class="image-container">
                        <img src="/public/img/graphic13-1.svg" alt="">
                    </div>
                    <div class="form-items">
                        <img class="img-float" src="/public/img/graphic13-2.svg" alt="">
                        <div class="website-logo-inside logo-normal">
                            <a href="/">
                                <div class="logo">
                                    <img class="logo-size" src="/public/img/logo-light.svg" alt="">
                                </div>
                            </a>
                        </div>
                        <h3 class="font-md">Get more things done with Loggin platform.</h3>
                        <p>Access to the most powerfull tool in the entire design and web industry.</p>

                        <!-- status -->
                        <div id="status"></div>

                        <form action="/login" method="POST">
                            <input class="form-control" type="text" name="email" placeholder="E-mail Address" required>
                            <input class="form-control" type="password" name="password" placeholder="Password" required>
                            <div class="form-button d-flex">
                                <button id="submit" type="submit" class="btn btn-primary">Login</button>
                                <a href="/register" class="btn btn-outline-primary">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="/public/js/jquery.min.js"></script>
<script src="/public/js/popper.min.js"></script>
<script src="/public/js/bootstrap.bundle.min.js"></script>
<script src="/public/js/main.js"></script>

<script>

    //status
    const status = document.getElementById('status');
    const urlParams = new URLSearchParams(window.location.search);
    const statusParam = urlParams.get('status');

    if(statusParam === 'success') {
        status.innerHTML = '<div class="alert alert-success" role="alert">Login successful</div>';
    } else if(statusParam === 'error') {
        status.innerHTML = '<div class="alert alert-danger" role="alert">Login failed</div>';
    }
    

</script>


</body>
</html>